# Environment Configuration (Copy to .env and update values)
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DATABASE=idea_bp_db
DB_DIALECT=mysql

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# API Configuration
API_PREFIX=api/v1
API_TITLE=Idea BP Backend API
API_DESCRIPTION=Backend API for Idea BP Application
API_VERSION=1.0.0

# Cors Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10